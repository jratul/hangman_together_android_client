<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBaseBackground"
    android:paddingTop="?attr/actionBarSize"
    android:paddingLeft="@dimen/fragment_base_padding"
    android:paddingRight="@dimen/fragment_base_padding"
    android:paddingBottom="@dimen/fragment_base_padding"
    tools:context="com.swmaestro.hangman_together.ui.game.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/game_base_margin_bottom"
        android:layout_marginBottom="@dimen/game_base_margin_bottom"
        >
        <ImageView
            android:id="@+id/game_img_hangman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/game_base_margin_bottom"
            android:layout_marginBottom="@dimen/game_base_margin_bottom"
            android:scaleType="fitXY"
            android:src="@drawable/hang_01"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/game_layout_win_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/game_base_margin_between_tv"
                    android:text="@string/game_value_win_label"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/game_label_text_size"
                    />
                <TextView
                    android:id="@+id/game_tv_win_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/game_score_text_size"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/game_layout_lose_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/game_base_margin_between_tv"
                    android:text="@string/game_value_lose_label"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/game_label_text_size"
                    />
                <TextView
                    android:id="@+id/game_tv_lose_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/game_score_text_size"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
